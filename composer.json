{
    "name": "cms-orbit/comments",
    "description": "A comprehensive comment system for CMS-Orbit with reactions, ratings, and notifications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "xiso",
            "email": "ceo@amuz.co.kr"
        }
    ],
    "require": {
        "php": "^8.3",
        "amuz/cms-orbit": "3.0.19",
        "laravel/framework": "^11.0",
        "spatie/laravel-activitylog": "^4.0",
        "spatie/laravel-translatable": "^6.0",
        "spatie/laravel-permission": "^6.0",
        "laravel/notifications": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "CmsOrbit\\Comments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CmsOrbit\\Comments\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CmsOrbit\\Comments\\CommentsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 